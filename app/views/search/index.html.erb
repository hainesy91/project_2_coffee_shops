<div id="search_results_title">
  <h1>Coffee Search Results:</h1>

  <div id="search_results_list">
    <% @search_results.each do |coffeeshop| %>
      <div class="search_results_item">
        <p class="search_title"><%= link_to coffeeshop.name, coffee_shop_path(coffeeshop) %></p>
        <p class="search-address"><%= coffeeshop.address %></p>
      </div>
    <% end %>
  </div>

  <h2 class="suggestion">Don't see the Coffee Shop you're looking for? Why don't you add it!</h2>

  <div id="add">
    <%= link_to 'Add a Coffee Shop', new_coffee_shop_path %>
    <% @coffeeshops.each do |coffeeshop| %>
    <% end %>
  </div>
</div>

 



