
<div id="search">
  <%= form_tag("/search", method: :get) do %>
    <%= label_tag(:q, "Search for great Coffee!") %>
    <%= text_field_tag(:q) %>
    <%= submit_tag("Search") %>
    <%= label_tag %>
  <% end %>
</div>

<div id="coffeeshop-list">
  <% @latest.each do |shop| %>
    <div class="featured">
      <img src="<%= shop.image %>" class="featured-img">
      <h2 class="featured-name"><%= shop.name %></h3>
      <h3 class="featured-address"><%= shop.address %></h4>
      <%= link_to "Read More", coffee_shop_path(shop), class: 'read-more' %>
    </div>
  <% end %>
</div>


